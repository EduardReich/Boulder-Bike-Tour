<div id="generalContainer" class="d-flex flex-column">
  <div class="container text-center">
    <p id="notice"><%= notice %></p>

    <h1 class="mx-auto mt-5">Submissions</h1>
    <div class="table-responsive">
      <table class="table w-50 mx-auto mt-5">
        <thead>
          <tr>
            <th>First name</th>
            <% if user_signed_in? %>
            <th>Last name</th>
            <th>Email</th>
            <% end %>
            <th>Slogan</th>
            <th>Date</th>
            <% if user_signed_in? %>
            <th colspan="3"></th>
            <% end%>
          </tr>
        </thead>

        <tbody>
          <% @submissions.each do |submission| %>
            <tr>
              <td><%= submission.first_name %></td>
              <% if user_signed_in? %>
              <td><%= submission.last_name %></td>
              <td><%= submission.email %></td>
              <% end %>
              <td><%= submission.slogan %></td>
              <td><%= submission.created_at %></td>
              <% if user_signed_in? %>
              <td><%= link_to 'Show', submission %></td>
              <td><%= link_to 'Edit', edit_submission_path(submission) %></td>
              <td><%= link_to 'Destroy', submission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>

    <%= link_to 'New Submission', new_submission_path, :class => "btn btn-dark w-10 mx-auto m-5"%>
  </div>  
</div>