<h1>Riders</h1>


<%= link_to 'New rider', new_rider_path %>
<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>City</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th colspan="3"></th>
  </tr>
 
  <% @riders.each do |rider| %>
    <tr>
      <td><%= rider.first_name %></td>
      <td><%= rider.last_name %></td>
      <td><%= rider.city %></td>
      <td><%= rider.latitude %></td>
      <td><%= rider.longitude %></td>
      <td><%= link_to 'Show', rider_path(rider) %></td>
      <td><%= link_to 'Edit', edit_rider_path(rider) %></td>
      <td><%= link_to 'Destroy', rider_path(rider),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>