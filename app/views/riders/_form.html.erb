<div class="container w-50">
  <%= form_with model: @rider, local: true do |form| %>

    <% if @rider.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@rider.errors.count, "error") %> prohibited
          this log from being saved:
        </h2>
        <ul>
          <% @rider.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group mt-5">
      <label >First Name: </label>
      <%= form.text_field :first_name, :class => "form-control" %>
    </div>
    <div class="form-group">
      <label>Last Name: </label>
      <%= form.text_field :last_name, :class => "form-control" %>
    </div>
    <div class="form-group">
      <label>City: </label>
      <%= form.text_field :city, :class => "form-control" %>
    </div>
    <div class="form-group">
      <label>Latitude: </label>
      <%= form.number_field :latitude, step: :any, :class => "form-control" %>
    </div>
    <div class="form-group">
      <label>Longitude: </label>
      <%= form.number_field :longitude, step: :any, :class => "form-control"  %>
    </div>

    <div>
      <%= form.submit :class => "btn btn-dark" %>
    </div>

  <% end %>
</div>