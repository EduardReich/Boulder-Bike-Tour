<%= form_with model: @rider, local: true do |form| %>

  <% if @rider.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@rider.errors.count, "error") %> prohibited
        this log from being saved:
      </h2>
      <ul>
        <% @rider.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <label >First Name: </label>
    <%= form.text_field :first_name %>
  </div>
  <div>
    <label>Last Name: </label>
    <%= form.text_field :last_name %>
  </div>
  <div>
    <label>City: </label>
    <%= form.text_field :city %>
  </div>
  <div>
    <label>Latitude: </label>
    <%= form.number_field :latitude, step: :any %>
  </div>
  <div>
    <label>Longitude: </label>
    <%= form.number_field :longitude, step: :any  %>
  </div>

  <div>
    <%= form.submit %>
  </div>

<% end %>